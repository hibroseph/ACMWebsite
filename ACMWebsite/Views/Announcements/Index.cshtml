@model IEnumerable<ACMWebsite.Models.Announcement>

@{
    ViewData["Title"] = "Index";
}



<h1>Announcements</h1>

<style>
    .announcement-title {
        color: black;
        font-weight: bolder;
        font-size: 30px;

    }

    .announcement-body {
        color: black;
        padding:10px;
    }


    .announcement {
        background-color: #e3e3e3;
        border-radius: 5px;
        width: 800px;
        padding:10px;
        margin: 20px;
    }
</style>



@foreach (var item in Model)
{
    <div class="announcement">
        <p class="announcement-title"> @Html.DisplayFor(modelItem => item.Title)</p>
        <p class="announcement-body">@Html.DisplayFor(modelItem => item.Body)</p>
    </div>
}


