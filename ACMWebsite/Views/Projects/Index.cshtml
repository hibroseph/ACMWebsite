@model IEnumerable<ACMWebsite.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<style>
    .card {
        margin: 20px;
    }

    .mod-actions {
        float: right;
    }
</style>
<h1>Projects</h1>
<button type="button" asp-action="Create" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Projects")'">Add Your Project</button>

@foreach (var item in Model)
{
    <div class="card" style="width: 25rem;">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.ProjectName)</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Creator)</h6>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>

            <a class="card-link" asp-action="Details" asp-route-id="@item.Id">Details</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="card-link mod-actions" asp-action="Delete" asp-route-id="@item.Id">Delete </a>
                <a class="card-link mod-actions" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            }
        </div>
    </div>
}

